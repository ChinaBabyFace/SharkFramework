<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_lv_item_bg"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="#ffffffff"
    android:gravity="center_vertical"
    android:padding="10dip">

    <m.framework.ui.widget.asyncview.AsyncImageView
        android:id="@+id/iv_contact"
        android:layout_width="41dip"
        android:layout_height="41dip"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/iv_contact"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="60dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/smssdk_corners_bg"
        android:text="@string/smssdk_add_contact"
        android:textColor="#797979"
        android:textSize="14sp" />
</RelativeLayout>